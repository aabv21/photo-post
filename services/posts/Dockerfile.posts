FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY services/posts/package*.json ./

# Install dependencies
RUN npm install

# Copy service files
COPY services/posts/ ./

# Create uploads directory
RUN mkdir -p uploads

# Set environment variables
ENV NODE_ENV=development

# Expose port
EXPOSE 3003

# Start the service
CMD ["node", "index.js"] 